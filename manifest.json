{
  "name": "read-it",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Click to provide indication of new comments on Reddit"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://old.reddit.com/r/*"],
      "js": ["content.js"]
    }
  ]
}
